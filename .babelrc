{
  "presets": [
    ["env", {
      "modules": false,
      "targets": {
        "browsers": ["> 1%", "last 2 versions", "not ie <= 8"]
      }
    }],
    "stage-2",
    "es2015"
  ],
  "plugins": [["babel-plugin-transform-runtime"], ["transform-es2015-modules-commonjs", { "allowTopLevelThis": true }]],
  "env": {
    "test": {
      "presets": ["env", "stage-2", "es2015"],
      "plugins": ["istanbul"]
    }
  }
}

